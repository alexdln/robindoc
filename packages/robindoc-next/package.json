  "keywords": [
    "robindoc",
    "next.js",
    "next",
    "documentation",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/alexdln/robindoc.git"
  },
  "author": {
    "name": "Alex Savelyev",
    "email": "dev@alexdln.com",
    "url": "https://github.com/alexdln/"
  },
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "12.3.0",
    "@types/node": "25.0.8",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "robindoc": "latest",
    "rollup": "4.55.1",
    "rollup-preserve-directives": "1.1.3",
    "ts-patch": "3.3.0",
    "typescript": "5.9.3",
    "typescript-transform-paths": "3.5.6"
  },
  "peerDependencies": {
    "robindoc": ">= 3.0.0",
    "next": ">= 14.0.0",
    "react": ">= 18.3.0",
    "react-dom": ">= 18.3.0"
  }
