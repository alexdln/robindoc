{
  "name": "@robindoc/minisearch",
  "version": "1.0.0",
  "description": "MiniSearch integration for robindoc documentation sites",
  "main": "./lib/index.js",
  "bin": {
    "robindoc-minisearch": "./lib/cli.js",
    "@robindoc/minisearch": "./lib/cli.js"
  },
  "exports": {
    ".": "./lib/index.js",
    "./provider": "./lib/provider.js"
  },
  "scripts": {
    "prepare": "ts-patch install -s",
    "build": "rollup -c",
    "dev": "rollup -c -w"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "robindoc",
    "minisearch",
    "search",
    "documentation"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/alexdln/robindoc.git"
  },
  "author": {
    "name": "Alex Savelyev",
    "email": "dev@alexdln.com",
    "url": "https://github.com/alexdln/"
  },
  "license": "MIT",
  "dependencies": {
    "dotenv": "17.2.3",
    "gray-matter": "4.0.3",
    "marked": "17.0.1",
    "minisearch": "7.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "12.3.0",
    "@types/node": "25.1.0",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "rollup": "4.57.0",
    "ts-patch": "3.3.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-transform-paths": "3.5.6"
  },
  "peerDependencies": {
    "tsx": ">= 1.0.0"
  },
  "peerDependenciesMeta": {
    "tsx": {
      "optional": true
    }
  }
}